yo---
import Layout from '../layouts/Layout.astro';
import VisitorCounter from '../components/VisitorCounter.astro';
---

<Layout 
  title="GoatCounter Test" 
  description="Testing GoatCounter visitor counter implementation"
  noindex={true}
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-6">GoatCounter Test Page</h1>
    
    <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg mb-8">
      <h2 class="text-2xl font-semibold mb-4">Visitor Counter Test</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        This page tests the GoatCounter visitor counter implementation.
      </p>
      
      <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
        <span>Page Views:</span>
        <VisitorCounter />
      </div>
    </div>

    <div class="bg-blue-50 dark:bg-blue-900 p-6 rounded-lg">
      <h3 class="text-lg font-semibold mb-4">Implementation Details</h3>
      <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
        <li>• Using official GoatCounter script from [documentation](https://goatcounter.com/help/start)</li>
        <li>• Simple visitor counter component with proper error handling</li>
        <li>• Async script loading for better performance</li>
        <li>• No branding option enabled</li>
        <li>• Clean, minimal implementation</li>
      </ul>
    </div>
  </div>
</Layout> 