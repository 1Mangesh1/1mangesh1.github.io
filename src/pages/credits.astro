---
import Layout from '../layouts/Layout.astro';

const frameworks = [
  {
    name: 'Astro',
    description: 'Content-focused web framework with excellent DX and performance.',
    url: 'https://astro.build',
    color: 'orange'
  },
  {
    name: 'Tailwind CSS',
    description: 'Utility-first CSS framework for rapid UI development.',
    url: 'https://tailwindcss.com',
    color: 'cyan'
  },
  {
    name: 'TypeScript',
    description: 'Type-safe JavaScript that catches errors at build time.',
    url: 'https://www.typescriptlang.org',
    color: 'blue'
  },
  {
    name: 'MDX',
    description: 'Markdown with JSX support for rich content authoring.',
    url: 'https://mdxjs.com',
    color: 'yellow'
  }
];

const infrastructure = [
  {
    name: 'GitHub Pages',
    description: 'Static site hosting with CI/CD from GitHub repos.',
    url: 'https://pages.github.com'
  },
  {
    name: 'Cloudflare',
    description: 'CDN, DNS, and performance optimization.',
    url: 'https://cloudflare.com'
  },
  {
    name: 'GoatCounter',
    description: 'Privacy-friendly analytics without cookies.',
    url: 'https://www.goatcounter.com'
  },
  {
    name: 'UseBasin',
    description: 'Form backend for contact submissions.',
    url: 'https://usebasin.com'
  }
];

const devTools = [
  {
    name: 'Cursor',
    description: 'AI-assisted code editor built on VS Code.',
    url: 'https://www.cursor.com'
  },
  {
    name: 'Claude',
    description: 'AI assistant for coding, writing, and problem-solving.',
    url: 'https://claude.ai'
  },
  {
    name: 'Yarn',
    description: 'Fast, reliable dependency management.',
    url: 'https://yarnpkg.com'
  },
  {
    name: 'Git',
    description: 'Version control for tracking changes.',
    url: 'https://git-scm.com'
  }
];

const apis = [
  {
    name: 'Meme API',
    description: 'Programming memes from Reddit for the /meme page.',
    url: 'https://meme-api.com'
  }
];

const inspiration = [
  {
    name: 'Astro Docs',
    url: 'https://docs.astro.build',
    note: 'Excellent documentation and examples'
  },
  {
    name: 'Tailwind UI',
    url: 'https://tailwindui.com',
    note: 'Design patterns and components'
  },
  {
    name: 'Josh W. Comeau',
    url: 'https://www.joshwcomeau.com',
    note: 'Interactive tutorials and blog design'
  },
  {
    name: 'Lee Robinson',
    url: 'https://leerob.io',
    note: 'Clean personal site architecture'
  },
  {
    name: 'Dan Abramov',
    url: 'https://overreacted.io',
    note: 'Technical writing style'
  }
];

const colorClasses: Record<string, string> = {
  orange: 'bg-orange-50 dark:bg-orange-950/30 border-orange-200 dark:border-orange-800',
  cyan: 'bg-cyan-50 dark:bg-cyan-950/30 border-cyan-200 dark:border-cyan-800',
  blue: 'bg-blue-50 dark:bg-blue-950/30 border-blue-200 dark:border-blue-800',
  yellow: 'bg-yellow-50 dark:bg-yellow-950/30 border-yellow-200 dark:border-yellow-800',
};
---

<Layout
  title="Credits - Mangesh Bide"
  description="Tools, frameworks, and people that made this site possible"
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Header -->
    <header class="mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100">
        Credits
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl">
        This site is built on the work of many talented people and projects.
        Here's what powers it.
      </p>
    </header>

    <!-- Frameworks & Libraries -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        Frameworks & Libraries
      </h2>
      <div class="grid md:grid-cols-2 gap-4">
        {frameworks.map((item) => (
          <a
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
            class={`block rounded-lg p-5 border transition-transform hover:scale-[1.02] ${colorClasses[item.color]}`}
          >
            <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">
              {item.name}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {item.description}
            </p>
          </a>
        ))}
      </div>
    </section>

    <!-- Infrastructure -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        Infrastructure & Services
      </h2>
      <div class="grid md:grid-cols-2 gap-4">
        {infrastructure.map((item) => (
          <a
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gray-50 dark:bg-gray-800/50 rounded-lg p-5 border border-gray-200 dark:border-gray-700 transition-transform hover:scale-[1.02]"
          >
            <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">
              {item.name}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {item.description}
            </p>
          </a>
        ))}
      </div>
    </section>

    <!-- Development Tools -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        Development Tools
      </h2>
      <div class="grid md:grid-cols-2 gap-4">
        {devTools.map((item) => (
          <a
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gray-50 dark:bg-gray-800/50 rounded-lg p-5 border border-gray-200 dark:border-gray-700 transition-transform hover:scale-[1.02]"
          >
            <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">
              {item.name}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {item.description}
            </p>
          </a>
        ))}
      </div>
    </section>

    <!-- APIs -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        APIs
      </h2>
      <div class="grid md:grid-cols-2 gap-4">
        {apis.map((item) => (
          <a
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gray-50 dark:bg-gray-800/50 rounded-lg p-5 border border-gray-200 dark:border-gray-700 transition-transform hover:scale-[1.02]"
          >
            <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-1">
              {item.name}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {item.description}
            </p>
          </a>
        ))}
      </div>
    </section>

    <!-- Typography -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        Typography
      </h2>
      <div class="bg-gray-50 dark:bg-gray-800/50 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          This site uses system fonts for optimal performance and a native feel across platforms.
        </p>
        <div class="space-y-3">
          <div>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Sans-serif:</span>
            <code class="ml-2 text-sm bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">
              ui-sans-serif, system-ui, sans-serif
            </code>
          </div>
          <div>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Monospace:</span>
            <code class="ml-2 text-sm bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">
              ui-monospace, Menlo, Monaco, monospace
            </code>
          </div>
        </div>
      </div>
    </section>

    <!-- Inspiration -->
    <section class="mb-14">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        Inspiration
      </h2>
      <p class="text-gray-600 dark:text-gray-400 mb-6">
        Sites and people whose work influenced the design and content of this site.
      </p>
      <ul class="space-y-3">
        {inspiration.map((item) => (
          <li class="flex items-start gap-3">
            <span class="text-gray-400 dark:text-gray-500 mt-1">-</span>
            <div>
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="font-medium text-blue-600 dark:text-blue-400 hover:underline"
              >
                {item.name}
              </a>
              <span class="text-gray-500 dark:text-gray-500 text-sm ml-2">
                {item.note}
              </span>
            </div>
          </li>
        ))}
      </ul>
    </section>

    <!-- Open Source Acknowledgment -->
    <section class="mb-14">
      <div class="bg-gradient-to-r from-gray-900 to-gray-800 dark:from-gray-800 dark:to-gray-900 rounded-lg p-8 text-white">
        <h2 class="text-xl font-bold mb-3">Open Source</h2>
        <p class="text-gray-300 mb-4">
          This site is built entirely with open source tools. The source code is available on GitHub.
        </p>
        <a
          href="https://github.com/1mangesh1/1mangesh1.github.io"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm font-medium text-white hover:text-gray-200 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          View source on GitHub
        </a>
      </div>
    </section>

    <!-- Back Navigation -->
    <nav class="pt-6 border-t border-gray-200 dark:border-gray-800">
      <a
        href="/"
        class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Home
      </a>
    </nav>
  </div>
</Layout>