---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const portfolioItems = await getCollection('portfolio');
  
  return portfolioItems.map((item) => {
    return {
      params: { slug: item.slug },
      props: { item }
    };
  });
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<Layout title={`${item.data.title} - Portfolio`} description={item.data.description} image={item.data.image}>
  <article class="max-w-4xl mx-auto px-4 py-12" data-pagefind-body itemscope itemtype="https://schema.org/CreativeWork">
    <header class="mb-8">
      <nav aria-label="Breadcrumb" class="text-sm text-gray-500 dark:text-gray-400 mb-4">
        <ol class="flex items-center gap-1">
          <li><a href="/" class="hover:text-blue-600 dark:hover:text-blue-400">Home</a></li>
          <li aria-hidden="true">/</li>
          <li><a href="/portfolio" class="hover:text-blue-600 dark:hover:text-blue-400">Portfolio</a></li>
          <li aria-hidden="true">/</li>
          <li aria-current="page">{item.data.title}</li>
        </ol>
      </nav>
      <h1 class="text-4xl font-bold mb-4" itemprop="name">{item.data.title}</h1>
      {item.data.description && (
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-4" itemprop="description">{item.data.description}</p>
      )}
      <div class="flex flex-wrap gap-4 items-center text-sm text-gray-600 dark:text-gray-400">
        {item.data.date && (
          <time datetime={item.data.date.toISOString()}>
            {item.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        )}
        {item.data.tech && item.data.tech.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {item.data.tech.map((tech) => (
              <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-md text-xs">
                {tech}
              </span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-none" itemprop="text">
      <Content />
    </div>

    {(item.data.github || item.data.demo) && (
      <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-semibold mb-4">Project Links</h3>
        <div class="flex gap-4" role="list" aria-label="Project links">
          {item.data.github && (
            <a 
              href={item.data.github}
              target="_blank"
              rel="noopener noreferrer"
              itemprop="codeRepository"
              class="inline-flex items-center px-4 py-2 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 rounded-lg hover:opacity-80 transition-opacity"
            >
              GitHub
            </a>
          )}
          {item.data.demo && (
            <a 
              href={item.data.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
              Live Demo
            </a>
          )}
        </div>
      </div>
    )}

    <nav class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700" aria-label="Portfolio navigation">
      <a 
        href="/portfolio" 
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline"
      >
        ‚Üê Back to portfolio
      </a>
    </nav>
  </article>

  <!-- CreativeWork Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "CreativeWork",
    "name": item.data.title,
    "description": item.data.description,
    "dateCreated": item.data.date.toISOString(),
    "creator": {
      "@type": "Person",
      "name": "Mangesh Bide",
      "url": "https://mangeshbide.tech"
    },
    "url": `https://mangeshbide.tech/portfolio/${item.slug}`,
    "keywords": item.data.tech.join(", "),
    "image": item.data.image ? `https://mangeshbide.tech${item.data.image}` : undefined
  })} />

  <!-- BreadcrumbList Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://mangeshbide.tech"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Portfolio",
        "item": "https://mangeshbide.tech/portfolio"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": item.data.title,
        "item": `https://mangeshbide.tech/portfolio/${item.slug}`
      }
    ]
  })} />
</Layout> 