---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Search - Mangesh">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
      <h1>Search</h1>
      <p>Find blog posts, portfolio projects, resources, and more across the entire site.</p>
    </div>

    <!-- Search Form -->
    <div class="mb-12">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search for posts, projects, resources..."
          class="w-full px-6 py-4 text-lg border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800 shadow-sm"
        />
        <div class="absolute right-4 top-1/2 transform -translate-y-1/2">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
      
      <!-- Search Filters -->
      <div class="mt-4 flex flex-wrap gap-2">
        <button class="filter-btn px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-lg text-sm active" data-filter="all">
          All
        </button>
        <button class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm" data-filter="blog">
          Blog Posts
        </button>
        <button class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm" data-filter="portfolio">
          Projects
        </button>
        <button class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm" data-filter="resources">
          Resources
        </button>
      </div>
    </div>

    <!-- Search Results -->
    <div id="search-results" class="hidden">
      <h2 class="text-2xl font-bold mb-6">Search Results</h2>
      <div id="results-container" class="space-y-6">
        <!-- Results will be populated by JavaScript -->
      </div>
      <div id="no-results" class="hidden text-center py-12">
        <div class="text-4xl mb-4">üîç</div>
        <h3 class="text-xl font-semibold mb-2">No results found</h3>
        <p class="text-gray-600 dark:text-gray-400">Try adjusting your search terms or filters.</p>
      </div>
    </div>

    <!-- Popular Searches -->
    <div id="popular-searches" class="space-y-8">
      <section>
        <h2 class="text-2xl font-bold mb-6">Popular Searches</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="font-semibold text-lg mb-3">Recent Blog Posts</h3>
            <div class="space-y-2">
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="python">
                Python tutorials and tips
              </button>
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="django">
                Django web development
              </button>
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="machine learning">
                Machine learning projects
              </button>
            </div>
          </div>
          
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="font-semibold text-lg mb-3">Development Tools</h3>
            <div class="space-y-2">
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="vscode">
                VS Code setup and extensions
              </button>
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="docker">
                Docker and containerization
              </button>
              <button class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm" data-query="git">
                Git workflows and tips
              </button>
            </div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-6">Browse by Category</h2>
        <div class="grid md:grid-cols-3 gap-4">
          <a href="/blog" class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">üìù</span>
              <div>
                <h3 class="font-semibold">Blog Posts</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">Technical articles and tutorials</p>
              </div>
            </div>
          </a>
          
          <a href="/portfolio" class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">üíº</span>
              <div>
                <h3 class="font-semibold">Portfolio</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">Projects and case studies</p>
              </div>
            </div>
          </a>
          
          <a href="/resources" class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex items-center space-x-3">
              <span class="text-2xl">üîó</span>
              <div>
                <h3 class="font-semibold">Resources</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">Curated tools and links</p>
              </div>
            </div>
          </a>
        </div>
      </section>
    </div>
  </div>

  <script>
    // Mock search data - in a real app, this would come from an API or search index
    const searchData = [
      { type: 'blog', title: 'Hello World', url: '/blog/hello-world', excerpt: 'Welcome to my new blog built with Astro!' },
      { type: 'blog', title: 'Infinite Worlds', url: '/blog/infinite-worlds', excerpt: 'Exploring the concept of infinite possibilities in software development.' },
      { type: 'blog', title: 'Django Soft Delete', url: '/blog/soft-delete-django', excerpt: 'Implementing soft delete functionality in Django applications.' },
      { type: 'portfolio', title: 'CrimiFace', url: '/portfolio/crimiface', excerpt: 'Facial recognition system for criminal identification using machine learning.' },
      { type: 'resources', title: 'Essential Development Tools', url: '/resources', excerpt: 'VS Code and other productivity tools for developers.' },
      { type: 'resources', title: 'Python Learning Resources', url: '/resources', excerpt: 'Comprehensive collection of Python learning materials.' }
    ];

    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchResults = document.getElementById('search-results') as HTMLElement;
    const resultsContainer = document.getElementById('results-container') as HTMLElement;
    const noResults = document.getElementById('no-results') as HTMLElement;
    const popularSearches = document.getElementById('popular-searches') as HTMLElement;
    const filterBtns = document.querySelectorAll('.filter-btn');
    const searchSuggestions = document.querySelectorAll('.search-suggestion');

    let currentFilter = 'all';

    function performSearch(query: string) {
      if (!query.trim()) {
        searchResults?.classList.add('hidden');
        popularSearches?.classList.remove('hidden');
        return;
      }

      popularSearches?.classList.add('hidden');
      searchResults?.classList.remove('hidden');

      const filteredData = searchData.filter(item => {
        const matchesQuery = item.title.toLowerCase().includes(query.toLowerCase()) ||
                           item.excerpt.toLowerCase().includes(query.toLowerCase());
        const matchesFilter = currentFilter === 'all' || item.type === currentFilter;
        return matchesQuery && matchesFilter;
      });

      if (filteredData.length === 0) {
        if (resultsContainer) resultsContainer.innerHTML = '';
        noResults?.classList.remove('hidden');
      } else {
        noResults?.classList.add('hidden');
        if (resultsContainer) {
          resultsContainer.innerHTML = filteredData.map(item => `
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
              <div class="flex items-start justify-between mb-2">
                <h3 class="font-semibold text-lg">
                  <a href="${item.url}" class="text-blue-600 dark:text-blue-400 hover:underline">${item.title}</a>
                </h3>
                <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded capitalize">
                  ${item.type}
                </span>
              </div>
              <p class="text-gray-600 dark:text-gray-400 text-sm">${item.excerpt}</p>
            </div>
          `).join('');
        }
      }
    }

    searchInput?.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      if (target) {
        performSearch(target.value);
      }
    });

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active filter
        filterBtns.forEach(b => {
          b.classList.remove('active', 'bg-blue-100', 'dark:bg-blue-900', 'text-blue-800', 'dark:text-blue-200');
          b.classList.add('bg-gray-100', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        });
        btn.classList.add('active', 'bg-blue-100', 'dark:bg-blue-900', 'text-blue-800', 'dark:text-blue-200');
        btn.classList.remove('bg-gray-100', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        
        const element = btn as HTMLElement;
        currentFilter = element.dataset.filter || 'all';
        if (searchInput) {
          performSearch(searchInput.value);
        }
      });
    });

    searchSuggestions.forEach(suggestion => {
      suggestion.addEventListener('click', () => {
        const element = suggestion as HTMLElement;
        const query = element.dataset.query;
        if (query && searchInput) {
          searchInput.value = query;
          performSearch(query);
        }
      });
    });

    // Add keyboard shortcut for search (Cmd/Ctrl + K)
    document.addEventListener('keydown', (e) => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        searchInput?.focus();
      }
    });
  </script>
</Layout> 