---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Search | Mangesh Bide"
  description="Search blog posts, portfolio projects, resources, code snippets, and more across the entire site using full-text search."
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
      <h1>Search</h1>
      <p>
        Find blog posts, portfolio projects, resources, and more across the
        entire site.
      </p>
    </div>

    <!-- Search Form -->
    <div class="mb-12">
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search for posts, projects, resources..."
          class="w-full px-6 py-4 text-lg border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-800 shadow-sm"
        />
        <div class="absolute right-4 top-1/2 transform -translate-y-1/2">
          <svg
            class="w-6 h-6 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>

      <!-- Search Filters -->
      <div class="mt-4 flex flex-wrap gap-2">
        <button
          class="filter-btn px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-lg text-sm active"
          data-filter="all"
        >
          All
        </button>
        <button
          class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm"
          data-filter="blog"
        >
          Blog Posts
        </button>
        <button
          class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm"
          data-filter="portfolio"
        >
          Projects
        </button>
        <button
          class="filter-btn px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm"
          data-filter="resources"
        >
          Resources
        </button>
      </div>
    </div>

    <!-- Smart Search Summary Controls -->
    <div
      id="smart-search-controls"
      class="mt-6 hidden animate-fade-in border-t border-gray-200 dark:border-gray-700 pt-4"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <span class="text-sm font-medium text-gray-700 dark:text-gray-300"
            >‚ú® AI Summary</span
          >
          <span
            class="text-xs text-gray-500 bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded"
            >Beta</span
          >
        </div>
        <div class="flex items-center space-x-3">
          <button
            id="settings-btn"
            class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 rounded transition-colors"
            title="AI Settings"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
              ></path><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
            >
          </button>
          <button
            id="summarize-btn"
            class="flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white text-sm font-medium rounded-lg shadow-md transition-all"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
            >
            <span>Summarize Results</span>
          </button>
        </div>
      </div>

      <!-- Summary Output -->
      <div id="summary-container" class="mt-4 hidden">
        <div
          class="bg-blue-50 dark:bg-blue-900/20 border border-blue-100 dark:border-blue-800 rounded-lg p-4"
        >
          <div class="flex items-start space-x-3">
            <div class="text-2xl mt-1">ü§ñ</div>
            <div class="flex-1">
              <h4 class="font-semibold text-blue-900 dark:text-blue-100 mb-1">
                AI Summary
              </h4>
              <div
                id="summary-content"
                class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed whitespace-pre-line"
              >
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- API Key Missing Warning -->
      <div id="api-key-warning" class="mt-2 hidden text-xs text-red-500">
        ‚ö†Ô∏è Please set your Gemini API Key in settings first.
      </div>
    </div>
  </div>

  <!-- Search Results -->
  <div id="search-results" class="hidden">
    <h2 class="text-2xl font-bold mb-6">Search Results</h2>

    <!-- Loading State -->
    <div id="search-loading" class="hidden">
      <div class="flex items-center justify-center py-12">
        <div class="flex items-center space-x-3">
          <div
            class="animate-spin rounded-full h-6 w-6 border-2 border-blue-600 border-t-transparent"
          >
          </div>
          <span class="text-gray-600 dark:text-gray-400">Searching...</span>
        </div>
      </div>
    </div>

    <div id="results-container" class="space-y-6">
      <!-- Results will be populated by JavaScript -->
    </div>
    <div id="no-results" class="hidden text-center py-12">
      <div class="text-4xl mb-4">üîç</div>
      <h3 class="text-xl font-semibold mb-2">No results found</h3>
      <p class="text-gray-600 dark:text-gray-400">
        Try adjusting your search terms or filters.
      </p>
    </div>
  </div>

  <!-- Popular Searches -->
  <div id="popular-searches" class="space-y-8">
    <section>
      <h2 class="text-2xl font-bold mb-6">Popular Searches</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Recent Blog Posts</h3>
          <div class="space-y-2">
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="python"
            >
              Python tutorials and tips
            </button>
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="django"
            >
              Django web development
            </button>
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="machine learning"
            >
              Machine learning projects
            </button>
          </div>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Development Tools</h3>
          <div class="space-y-2">
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="vscode"
            >
              VS Code setup and extensions
            </button>
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="docker"
            >
              Docker and containerization
            </button>
            <button
              class="search-suggestion block w-full text-left text-blue-600 dark:text-blue-400 hover:underline text-sm"
              data-query="git"
            >
              Git workflows and tips
            </button>
          </div>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold mb-6">Browse by Category</h2>
      <div class="grid md:grid-cols-3 gap-4">
        <a
          href="/blog"
          class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 hover:shadow-md transition-shadow"
        >
          <div class="flex items-center space-x-3">
            <span class="text-2xl">üìù</span>
            <div>
              <h3 class="font-semibold">Blog Posts</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Technical articles and tutorials
              </p>
            </div>
          </div>
        </a>

        <a
          href="/portfolio"
          class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4 hover:shadow-md transition-shadow"
        >
          <div class="flex items-center space-x-3">
            <span class="text-2xl">üíº</span>
            <div>
              <h3 class="font-semibold">Portfolio</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Projects and case studies
              </p>
            </div>
          </div>
        </a>

        <a
          href="/resources"
          class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4 hover:shadow-md transition-shadow"
        >
          <div class="flex items-center space-x-3">
            <span class="text-2xl">üîó</span>
            <div>
              <h3 class="font-semibold">Resources</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Curated tools and links
              </p>
            </div>
          </div>
        </a>
      </div>
    </section>
  </div>
</Layout>

<!-- Settings Modal -->
<div
  id="settings-modal"
  class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black bg-opacity-50 backdrop-blur-sm"
>
  <div
    class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full mx-4 p-6 border border-gray-200 dark:border-gray-700"
  >
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-bold">AI Settings</h3>
      <button
        id="close-settings"
        class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path></svg
        >
      </button>
    </div>

    <div class="mb-6">
      <label
        for="api-key-input"
        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
        >Google Gemini API Key</label
      >
      <input
        type="password"
        id="api-key-input"
        placeholder="Enter your API Key"
        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-900"
      />
      <p class="mt-2 text-xs text-gray-500">
        Your key is stored locally in your browser. It is never sent to our
        server.
      </p>
      <p class="mt-1 text-xs text-blue-500">
        <a
          href="https://aistudio.google.com/app/apikey"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:underline">Get a free Gemini API key ‚Üí</a>
      </p>
    </div>

    <div class="flex justify-end space-x-3">
      <button
        id="clear-key-btn"
        class="px-4 py-2 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg text-sm transition-colors"
        >Clear Key</button
      >
      <button
        id="save-key-btn"
        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm shadow-sm transition-colors"
        >Save Key</button
      >
    </div>
  </div>
</div>

<script>
  import { generateSearchSummary, type SearchResult } from "../utils/gemini";

  const searchInput = document.getElementById(
    "search-input",
  ) as HTMLInputElement;
  const searchResults = document.getElementById(
    "search-results",
  ) as HTMLElement;
  const searchLoading = document.getElementById(
    "search-loading",
  ) as HTMLElement;
  const resultsContainer = document.getElementById(
    "results-container",
  ) as HTMLElement;
  const noResults = document.getElementById("no-results") as HTMLElement;
  const popularSearches = document.getElementById(
    "popular-searches",
  ) as HTMLElement;
  const filterBtns = document.querySelectorAll(".filter-btn");
  const searchSuggestions = document.querySelectorAll(".search-suggestion");

  // Smart Summary Elements
  const smartSearchControls = document.getElementById(
    "smart-search-controls",
  ) as HTMLElement;
  const summarizeBtn = document.getElementById(
    "summarize-btn",
  ) as HTMLButtonElement;
  const summaryContainer = document.getElementById(
    "summary-container",
  ) as HTMLElement;
  const summaryContent = document.getElementById(
    "summary-content",
  ) as HTMLElement;
  const settingsBtn = document.getElementById(
    "settings-btn",
  ) as HTMLButtonElement;
  const settingsModal = document.getElementById(
    "settings-modal",
  ) as HTMLElement;
  const closeSettingsBtn = document.getElementById(
    "close-settings",
  ) as HTMLButtonElement;
  const saveKeyBtn = document.getElementById(
    "save-key-btn",
  ) as HTMLButtonElement;
  const clearKeyBtn = document.getElementById(
    "clear-key-btn",
  ) as HTMLButtonElement;
  const apiKeyInput = document.getElementById(
    "api-key-input",
  ) as HTMLInputElement;
  const apiKeyWarning = document.getElementById(
    "api-key-warning",
  ) as HTMLElement;

  let currentFilter = "all";
  let searchTimeout: NodeJS.Timeout;
  let pagefind: any;
  let currentSearchResults: SearchResult[] = []; // Store current results for RAG

  // Initialize Pagefind
  async function initPagefind() {
    try {
      // @ts-ignore
      pagefind = await import(/* @vite-ignore */ "/pagefind/pagefind.js");
      pagefind.init();
    } catch (e) {
      console.error(
        "Pagefind not found. Search will be unavailable until site is built.",
      );
    }
  }

  // Call init
  initPagefind();

  async function performSearch(query: string) {
    if (!query.trim()) {
      searchResults?.classList.add("hidden");
      smartSearchControls?.classList.add("hidden"); // Hide summary controls
      summaryContainer?.classList.add("hidden"); // Hide summary output
      popularSearches?.classList.remove("hidden");
      return;
    }

    // Clear previous timeout
    clearTimeout(searchTimeout);

    // Show loading state
    popularSearches?.classList.add("hidden");
    searchResults?.classList.remove("hidden");
    searchLoading?.classList.remove("hidden");
    resultsContainer?.classList.add("hidden");
    noResults?.classList.add("hidden");
    smartSearchControls?.classList.add("hidden"); // Hide summary while searching

    // Debounce search
    searchTimeout = setTimeout(async () => {
      if (!pagefind) {
        searchLoading?.classList.add("hidden");
        if (resultsContainer) {
          resultsContainer.innerHTML =
            '<div class="text-center text-gray-500">Search index not available in dev mode. Build the site to test search.</div>';
          resultsContainer.classList.remove("hidden");
        }
        return;
      }

      const search = await pagefind.search(query);
      const results = await Promise.all(
        search.results.map((r: any) => r.data()),
      );

      const filteredData = results.filter((item: any) => {
        let type = "page";
        if (item.url.includes("/blog/")) type = "blog";
        else if (item.url.includes("/portfolio/")) type = "portfolio";
        else if (item.url.includes("/resources/")) type = "resources";

        const matchesFilter = currentFilter === "all" || type === currentFilter;
        return matchesFilter;
      });

      // Update global results for RAG
      currentSearchResults = filteredData;

      // Hide loading state
      searchLoading?.classList.add("hidden");
      resultsContainer?.classList.remove("hidden");

      if (filteredData.length === 0) {
        if (resultsContainer) resultsContainer.innerHTML = "";
        noResults?.classList.remove("hidden");
        smartSearchControls?.classList.add("hidden"); // Hide controls if no results
      } else {
        noResults?.classList.add("hidden");
        smartSearchControls?.classList.remove("hidden"); // Show controls when results found
        summaryContainer?.classList.add("hidden"); // Hide old summary

        if (resultsContainer) {
          resultsContainer.innerHTML = filteredData
            .map((item: any) => {
              let type = "page";
              if (item.url.includes("/blog/")) type = "blog";
              else if (item.url.includes("/portfolio/")) type = "portfolio";
              else if (item.url.includes("/resources/")) type = "resources";

              return `
              <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700 opacity-0 animate-fade-in">
                <div class="flex items-start justify-between mb-2">
                  <h3 class="font-semibold text-lg">
                    <a href="${item.url}" class="text-blue-600 dark:text-blue-400 hover:underline">${item.meta.title}</a>
                  </h3>
                  <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs rounded capitalize">
                    ${type}
                  </span>
                </div>
                <p class="text-gray-600 dark:text-gray-400 text-sm">${item.excerpt}</p>
              </div>
            `;
            })
            .join("");

          // Trigger fade-in animation
          setTimeout(() => {
            const results =
              resultsContainer.querySelectorAll(".animate-fade-in");
            results.forEach((result, index) => {
              setTimeout(() => {
                result.classList.remove("opacity-0");
                result.classList.add("opacity-100");
              }, index * 100);
            });
          }, 50);
        }
      }
    }, 300);
  }

  /* --- Event Listeners & Logic --- */

  searchInput?.addEventListener("input", (e) => {
    const target = e.target as HTMLInputElement;
    if (target) {
      performSearch(target.value);
    }
  });

  filterBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      // Update active filter
      filterBtns.forEach((b) => {
        b.classList.remove(
          "active",
          "bg-blue-100",
          "dark:bg-blue-900",
          "text-blue-800",
          "dark:text-blue-200",
        );
        b.classList.add(
          "bg-gray-100",
          "dark:bg-gray-800",
          "text-gray-700",
          "dark:text-gray-300",
        );
      });
      btn.classList.add(
        "active",
        "bg-blue-100",
        "dark:bg-blue-900",
        "text-blue-800",
        "dark:text-blue-200",
      );
      btn.classList.remove(
        "bg-gray-100",
        "dark:bg-gray-800",
        "text-gray-700",
        "dark:text-gray-300",
      );

      const element = btn as HTMLElement;
      currentFilter = element.dataset.filter || "all";
      if (searchInput) {
        performSearch(searchInput.value);
      }
    });
  });

  searchSuggestions.forEach((suggestion) => {
    suggestion.addEventListener("click", () => {
      const element = suggestion as HTMLElement;
      const query = element.dataset.query;
      if (query && searchInput) {
        searchInput.value = query;
        performSearch(query);
      }
    });
  });

  // Add keyboard shortcut for search (Cmd/Ctrl + K)
  document.addEventListener("keydown", (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === "k") {
      e.preventDefault();
      searchInput?.focus();
    }
  });

  /* --- Smart Summary Logic --- */

  // API Key Management
  function getApiKey(): string | null {
    return localStorage.getItem("gemini_api_key");
  }

  function setApiKey(key: string) {
    localStorage.setItem("gemini_api_key", key);
  }

  // Load saved key into input on open
  settingsBtn?.addEventListener("click", () => {
    const key = getApiKey();
    if (key && apiKeyInput) apiKeyInput.value = key;
    settingsModal?.classList.remove("hidden");
  });

  closeSettingsBtn?.addEventListener("click", () => {
    settingsModal?.classList.add("hidden");
  });

  saveKeyBtn?.addEventListener("click", () => {
    const key = apiKeyInput?.value.trim();
    if (key) {
      setApiKey(key);
      settingsModal?.classList.add("hidden");
      apiKeyWarning?.classList.add("hidden"); // Clear warning if set
      alert("API Key saved securely to your browser.");
    }
  });

  clearKeyBtn?.addEventListener("click", () => {
    localStorage.removeItem("gemini_api_key");
    if (apiKeyInput) apiKeyInput.value = "";
    alert("API Key cleared.");
  });

  // Summarize Button
  summarizeBtn?.addEventListener("click", async () => {
    const apiKey = getApiKey();
    if (!apiKey) {
      apiKeyWarning?.classList.remove("hidden");
      settingsModal?.classList.remove("hidden");
      return;
    }
    apiKeyWarning?.classList.add("hidden");

    // Show loading state in summary container
    if (summaryContainer && summaryContent && summarizeBtn) {
      summaryContainer.classList.remove("hidden");
      summaryContent.innerHTML =
        '<span class="animate-pulse">Thinking... analyzing search results...</span>';
      summarizeBtn.disabled = true;
      summarizeBtn.classList.add("opacity-50", "cursor-not-allowed");

      try {
        const query = searchInput?.value || "";
        const summary = await generateSearchSummary(
          query,
          currentSearchResults,
          apiKey,
        );

        // Typewriter effect for result
        summaryContent.innerHTML = "";
        let i = 0;
        const speed = 10;
        function typeWriter() {
          if (i < summary.length) {
            summaryContent.innerHTML += summary.charAt(i);
            i++;
            setTimeout(typeWriter, speed);
          }
        }
        typeWriter();
      } catch (error: any) {
        console.error(error);
        summaryContent.innerHTML = `<span class=\"text-red-500\">Error: ${error.message || "Failed to generate summary."}</span>`;
      } finally {
        summarizeBtn.disabled = false;
        summarizeBtn.classList.remove("opacity-50", "cursor-not-allowed");
      }
    }
  });
</script>

<style>
  .animate-fade-in {
    transition: opacity 0.3s ease-in-out;
  }
</style>
