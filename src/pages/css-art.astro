  // Copy code functionality
  document.querySelectorAll('.copy-code-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const card = (e.target as HTMLElement).closest('.css-art-card');
      if (!card) return;

      const artType = card.getAttribute('data-art');
      if (!artType || !cssCodeSnippets[artType]) return;

      navigator.clipboard.writeText(cssCodeSnippets[artType]).then(() => {
        const originalText = btn.textContent;
        btn.textContent = 'Copied!';
        (btn as HTMLElement).classList.add('bg-green-500', 'text-white');
        setTimeout(() => {
          btn.textContent = originalText;
          (btn as HTMLElement).classList.remove('bg-green-500', 'text-white');
        }, 2000);
      });
    });
  });
