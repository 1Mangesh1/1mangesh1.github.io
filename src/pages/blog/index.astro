---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts from the content collection
const allPosts = await getCollection('blog');

// Sort by date (newest first)
const sortedPosts = allPosts
  .sort((a, b) => {
    return b.data.pubDate.getTime() - a.data.pubDate.getTime();
  });
---

<Layout title="Blog - Mangesh">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Blog</h1>
      <p class="text-gray-600 dark:text-gray-400">Thoughts on software development, AI, and technology</p>
    </div>

    <div class="space-y-8">
      {sortedPosts.map((post) => (
        <article class="border-b border-gray-200 dark:border-gray-700 pb-8 last:border-b-0">
          <div class="flex flex-col space-y-2">
            <h2 class="text-2xl font-semibold">
              <a 
                href={`/blog/${post.slug}`}
                class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
              >
                {post.data.title}
              </a>
            </h2>
            {post.data.description && (
              <p class="text-gray-600 dark:text-gray-400">{post.data.description}</p>
            )}
            <time class="text-sm text-gray-600 dark:text-gray-400">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout> 