---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection("blog", ({ data }) => data.draft !== true);
const allProjects = await getCollection("portfolio");
const allTil = await getCollection("til");
const allSnippets = await getCollection("snippets");

const techCategories = [
  { name: 'Languages', items: ['Python', 'JavaScript', 'TypeScript', 'Java', 'PHP'], color: 'blue' },
  { name: 'Backend', items: ['Django', 'NestJS', 'Node.js', 'Express', 'Laravel'], color: 'green' },
  { name: 'Frontend', items: ['React', 'Next.js', 'Astro', 'Tailwind CSS'], color: 'purple' },
  { name: 'DevOps', items: ['Docker', 'Terraform', 'GitHub Actions', 'AWS'], color: 'orange' },
  { name: 'ML / AI', items: ['TensorFlow', 'PyTorch', 'OpenCV', 'Computer Vision'], color: 'pink' },
  { name: 'Databases', items: ['PostgreSQL', 'MongoDB', 'MySQL', 'DynamoDB'], color: 'cyan' },
];

const timeline = [
  { year: '2025', title: 'SDE-I @ Houseworks Technologies', desc: 'Leading backend development for healthcare products. Django, AWS, Terraform, CI/CD automation.', type: 'work', color: 'blue' },
  { year: '2024', title: 'Backend Intern @ Netwin Infosolutions', desc: 'Built RESTful APIs, JWT auth systems, and ML-powered search for eCommerce.', type: 'work', color: 'blue' },
  { year: '2024', title: 'B.Tech Computer Engineering', desc: 'R.C. Patel Institute of Technology, Shirpur. CGPA: 7.98/10', type: 'edu', color: 'green' },
  { year: '2023', title: 'President ‚Äî Akatsuki Coding Club', desc: 'Led coding competitions and workshops for 100+ students.', type: 'leadership', color: 'purple' },
  { year: '2021', title: 'Diploma in Computer Engineering', desc: 'R.C. Patel Polytechnic, Shirpur. Score: 93.89%', type: 'edu', color: 'green' },
  { year: '2019', title: 'Started Coding Journey', desc: 'Began self-learning Python. Built first projects out of curiosity about how things work.', type: 'milestone', color: 'orange' },
];

const colorMap: Record<string, string> = {
  blue: 'bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200',
  green: 'bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-200',
  purple: 'bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-200',
  orange: 'bg-orange-100 dark:bg-orange-900/50 text-orange-800 dark:text-orange-200',
  pink: 'bg-pink-100 dark:bg-pink-900/50 text-pink-800 dark:text-pink-200',
  cyan: 'bg-cyan-100 dark:bg-cyan-900/50 text-cyan-800 dark:text-cyan-200',
};

const dotColors: Record<string, string> = {
  blue: 'bg-blue-500',
  green: 'bg-green-500',
  purple: 'bg-purple-500',
  orange: 'bg-orange-500',
};
---

<Layout title="About | Mangesh Bide" description="Learn about Mangesh Bide ‚Äî Software Development Engineer specializing in Python, Django, cloud infrastructure, and machine learning. Career timeline, technical skills, and engineering philosophy.">
  <div class="max-w-5xl mx-auto px-4 py-12">
    
    <!-- Hero -->
    <section class="mb-16 animate-on-scroll">
      <div class="flex flex-col md:flex-row gap-10 items-center">
        <div class="md:w-1/3 flex-shrink-0">
          <div class="relative">
            <img src="/me.jpg" alt="Mangesh Bide" class="w-48 h-48 md:w-56 md:h-56 rounded-2xl mx-auto shadow-xl object-cover hover-lift transition-all" />
            <div class="absolute -bottom-3 -right-3 bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
              Open to work
            </div>
          </div>
        </div>
        <div class="md:w-2/3">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            Hey, I'm <span class="custom-gradient-text">Mangesh</span> üëã
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">
            Software Development Engineer who turns complex problems into clean, scalable systems. 
            Currently building healthcare products at <strong>Houseworks Technologies</strong>.
          </p>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            I started coding out of curiosity about how video games work. That curiosity evolved into a career 
            building production systems, automating infrastructure, training ML models, and writing about it all.
            I don't just write code ‚Äî I engineer solutions with intention.
          </p>
          <div class="flex flex-wrap gap-3">
            <a href="/hire-me" class="inline-flex items-center gap-2 bg-blue-600 text-white px-5 py-2.5 rounded-lg hover:bg-blue-700 transition-colors font-medium">
              ü§ù Work With Me
            </a>
            <a href="/resume" class="inline-flex items-center gap-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-5 py-2.5 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors font-medium border border-gray-200 dark:border-gray-700">
              üìÑ Resume
            </a>
            <a href="https://github.com/1mangesh1" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-5 py-2.5 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors font-medium border border-gray-200 dark:border-gray-700">
              üêô GitHub
