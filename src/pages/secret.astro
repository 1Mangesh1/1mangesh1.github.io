---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="🤫 Secret Page - You Found It!" 
  description="A hidden page full of secrets and easter eggs for curious visitors"
  noindex={true}
>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <div class="text-8xl mb-6 animate-bounce">🕵️‍♂️</div>
      <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
        Welcome, Detective!
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        You found the secret page! You're clearly someone who pays attention to details. 🔍
      </p>
      <div class="animate-pulse text-2xl">✨ This page is full of secrets ✨</div>
    </div>

    <!-- Secret Stats -->
    <div class="grid md:grid-cols-3 gap-6 mb-16">
      <div class="bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg p-6 text-white text-center">
        <div class="text-3xl mb-2">🎮</div>
        <div class="text-2xl font-bold">7</div>
        <div class="text-sm opacity-90">Easter Eggs Hidden</div>
      </div>
      <div class="bg-gradient-to-br from-blue-500 to-cyan-500 rounded-lg p-6 text-white text-center">
        <div class="text-3xl mb-2">🎯</div>
        <div class="text-2xl font-bold" id="visitor-count">???</div>
        <div class="text-sm opacity-90">Secret Visitors</div>
      </div>
      <div class="bg-gradient-to-br from-green-500 to-emerald-500 rounded-lg p-6 text-white text-center">
        <div class="text-3xl mb-2">⏰</div>
        <div class="text-2xl font-bold" id="current-time">--:--</div>
        <div class="text-sm opacity-90">Discovery Time</div>
      </div>
    </div>

    <!-- Secret Messages -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">🔮 Secret Messages</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border-l-4 border-purple-500">
          <h3 class="font-bold mb-2 text-purple-600 dark:text-purple-400">For the Curious 🤔</h3>
          <p class="text-gray-600 dark:text-gray-400">
            "The best way to find out if you can trust somebody is to trust them." - Ernest Hemingway
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border-l-4 border-blue-500">
          <h3 class="font-bold mb-2 text-blue-600 dark:text-blue-400">For the Developers 👨‍💻</h3>
          <p class="text-gray-600 dark:text-gray-400">
            "Code is like humor. When you have to explain it, it's bad." - Cory House
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border-l-4 border-green-500">
          <h3 class="font-bold mb-2 text-green-600 dark:text-green-400">For the Dreamers ✨</h3>
          <p class="text-gray-600 dark:text-gray-400">
            "The only way to do great work is to love what you do." - Steve Jobs
          </p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border-l-4 border-red-500">
          <h3 class="font-bold mb-2 text-red-600 dark:text-red-400">For the Adventurers 🚀</h3>
          <p class="text-gray-600 dark:text-gray-400">
            "Life is either a daring adventure or nothing at all." - Helen Keller
          </p>
        </div>
      </div>
    </div>

    <!-- Interactive Elements -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">🎮 Secret Playground</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Color Changer -->
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4">🎨 Color Magic</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Click the button to change the page colors!</p>
          <button 
            id="color-magic-btn"
            class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-3 rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105"
          >
            ✨ Cast Color Spell
          </button>
        </div>
        
        <!-- Text Scrambler -->
        <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4">🔤 Text Scrambler</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">Watch the text dance!</p>
          <button 
            id="scramble-btn"
            class="bg-gradient-to-r from-blue-500 to-cyan-500 text-white px-6 py-3 rounded-lg hover:from-blue-600 hover:to-cyan-600 transition-all transform hover:scale-105"
          >
            🎭 Scramble Text
          </button>
          <div id="scramble-text" class="mt-4 text-lg font-mono">Hello, Secret Visitor!</div>
        </div>
      </div>
    </div>

    <!-- Secret Achievement -->
    <div class="text-center mb-16">
      <div class="bg-gradient-to-r from-yellow-400 to-orange-500 rounded-lg p-8 text-white">
        <div class="text-4xl mb-4">🏆</div>
        <h2 class="text-2xl font-bold mb-2">Achievement Unlocked!</h2>
        <p class="text-lg opacity-90 mb-4">Secret Page Explorer</p>
        <p class="text-sm opacity-75">You've discovered the hidden realm of this website. Your curiosity is admirable!</p>
      </div>
    </div>

    <!-- Secret Code -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold mb-8 text-center">🔐 Decode This</h2>
      <div class="bg-black text-green-400 font-mono p-6 rounded-lg text-center">
        <div class="text-lg mb-2">01001000 01100101 01101100 01101100 01101111</div>
        <div class="text-lg mb-2">01010111 01101111 01110010 01101100 01100100</div>
        <div class="text-sm opacity-75 mt-4">Hint: It's binary! 🤖</div>
      </div>
    </div>

    <!-- Back Navigation -->
    <div class="text-center">
      <a 
        href="/" 
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline text-lg"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Return to the Normal World
      </a>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-4">
        Psst... Don't tell everyone about this place! 🤫
      </p>
    </div>
  </div>
</Layout>

<script>
  // Update visitor count (simulated)
  const visitorCount = Math.floor(Math.random() * 1000) + 42;
  const visitorElement = document.getElementById('visitor-count');
  if (visitorElement) {
    let current = 0;
    const increment = visitorCount / 50;
    const timer = setInterval(() => {
      current += increment;
      if (current >= visitorCount) {
        current = visitorCount;
        clearInterval(timer);
      }
      visitorElement.textContent = Math.floor(current).toString();
    }, 50);
  }

  // Update time
  function updateTime() {
    const now = new Date();
    const timeString = now.toLocaleTimeString();
    const timeElement = document.getElementById('current-time');
    if (timeElement) {
      timeElement.textContent = timeString;
    }
  }
  updateTime();
  setInterval(updateTime, 1000);

  // Color Magic
  const colorMagicBtn = document.getElementById('color-magic-btn');
  const colors = [
    'bg-gradient-to-r from-purple-500 to-pink-500',
    'bg-gradient-to-r from-blue-500 to-cyan-500',
    'bg-gradient-to-r from-green-500 to-emerald-500',
    'bg-gradient-to-r from-red-500 to-orange-500',
    'bg-gradient-to-r from-indigo-500 to-purple-500',
    'bg-gradient-to-r from-pink-500 to-rose-500',
    'bg-gradient-to-r from-yellow-500 to-orange-500',
    'bg-gradient-to-r from-teal-500 to-cyan-500'
  ];
  let colorIndex = 0;

  colorMagicBtn?.addEventListener('click', () => {
    // Remove all gradient classes first
    colorMagicBtn.className = colorMagicBtn.className.replace(/bg-gradient-to-r from-\w+-\d+ to-\w+-\d+/g, '');
    
    // Add new gradient
    colorMagicBtn.className += ` ${colors[colorIndex]}`;
    
    // Change page background color temporarily
    const originalBg = document.body.style.backgroundColor;
    const colorMap = {
      0: '#f3e8ff', // purple
      1: '#e0f2fe', // blue  
      2: '#ecfdf5', // green
      3: '#fff7ed', // orange
      4: '#eef2ff', // indigo
      5: '#fdf2f8', // pink
      6: '#fffbeb', // yellow
      7: '#f0fdfa'  // teal
    };
    
    document.body.style.backgroundColor = colorMap[colorIndex] || '#ffffff';
    document.body.style.transition = 'background-color 0.5s ease';
    
    // Revert background after 3 seconds
    setTimeout(() => {
      document.body.style.backgroundColor = originalBg;
    }, 3000);
    
    // Add sparkle effect
    for (let i = 0; i < 15; i++) {
      setTimeout(() => {
        const sparkle = document.createElement('div');
        sparkle.textContent = ['✨', '⭐', '🌟', '💫'][Math.floor(Math.random() * 4)];
        sparkle.className = 'fixed text-2xl pointer-events-none animate-ping z-50';
        sparkle.style.left = Math.random() * window.innerWidth + 'px';
        sparkle.style.top = Math.random() * window.innerHeight + 'px';
        sparkle.style.animation = 'sparkle 1.5s ease-out forwards';
        document.body.appendChild(sparkle);
        
        setTimeout(() => sparkle.remove(), 1500);
      }, i * 100);
    }
    
    // Update button text temporarily
    const originalText = colorMagicBtn.textContent;
    colorMagicBtn.textContent = '🎨 Magic Activated!';
    setTimeout(() => {
      colorMagicBtn.textContent = originalText;
    }, 2000);
    
    colorIndex = (colorIndex + 1) % colors.length;
  });

  // Text Scrambler
  const scrambleBtn = document.getElementById('scramble-btn');
  const scrambleText = document.getElementById('scramble-text');
  const originalText = 'Hello, Secret Visitor!';
  const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()';

  scrambleBtn?.addEventListener('click', () => {
    if (!scrambleText) return;
    
    let iteration = 0;
    const interval = setInterval(() => {
      scrambleText.textContent = originalText
        .split('')
        .map((char, index) => {
          if (index < iteration) {
            return originalText[index];
          }
          return characters[Math.floor(Math.random() * characters.length)];
        })
        .join('');
      
      if (iteration >= originalText.length) {
        clearInterval(interval);
      }
      
      iteration += 1 / 3;
    }, 30);
  });

  // Secret page specific easter eggs
  let secretClicks = 0;
  document.addEventListener('click', () => {
    secretClicks++;
    if (secretClicks === 10) {
      document.body.style.animation = 'rainbow 2s infinite';
      setTimeout(() => {
        document.body.style.animation = '';
      }, 5000);
    }
  });

  // Konami code on secret page
  let secretKonami = [];
  const secretSequence = ['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight'];
  
  document.addEventListener('keydown', (e) => {
    secretKonami.push(e.code);
    if (secretKonami.length > 4) {
      secretKonami.shift();
    }
    
    if (secretKonami.length === 4 && 
        secretKonami.every((key, index) => key === secretSequence[index])) {
      // Super secret effect
      document.body.style.transform = 'rotate(360deg)';
      document.body.style.transition = 'transform 2s';
      setTimeout(() => {
        document.body.style.transform = '';
        document.body.style.transition = '';
      }, 2000);
      secretKonami = [];
    }
  });

  console.log('🎉 Welcome to the secret page! You found it!');
  console.log('🔍 Try clicking 10 times or use arrow keys: ↑↓←→');
</script>

<style>
  @keyframes rainbow {
    0% { filter: hue-rotate(0deg); }
    25% { filter: hue-rotate(90deg); }
    50% { filter: hue-rotate(180deg); }
    75% { filter: hue-rotate(270deg); }
    100% { filter: hue-rotate(360deg); }
  }
  
  @keyframes sparkle {
    0% { 
      opacity: 1; 
      transform: scale(0) rotate(0deg); 
    }
    50% { 
      opacity: 1; 
      transform: scale(1.5) rotate(180deg); 
    }
    100% { 
      opacity: 0; 
      transform: scale(0) rotate(360deg); 
    }
  }
</style> 